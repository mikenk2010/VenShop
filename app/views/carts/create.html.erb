<div class="container-home">
  <div class="items">
    <div class="clear" />
    <div class="newest">
     <% if params[:id].nil? %>
     <div class="title-search">Your don't have any item in cart</div>
     <% else %>
     <div class="headline-newest" style="color:#fff">Your item</div>

     <div style="color:red; font-size:14px;margin-top: 10px;margin-bottom: 10px;font-weight:bold">Total price: 123 Y</div>
     <div style="float:left; margin:right:10px; margin-bottom:-15px">

      <%= form_tag checkouts_path  do %>
      <%= hidden_field_tag :id, @product.id %>
      <%= submit_tag "Checkout", class: "btn btn-large btn-primary" %>
      <% end %>


    </div>


    <div class="list-Browse-NewsRv">

      <div class="bl-image"><img src="<%=@product['img']%>" />
      </div>
      <div class="price"><%=@product['price']%>
        <div class="newest-datetime"><%=@product['date']%></div>
        <div class="newest-datetime"><a href="#">
          <%= link_to "Remove",  method: :delete,
          data: { confirm: "You sure remove product ?" } %></a></div>
        </div>
        <div class="title-Br-NewsRv">
          <%=@product['title']%>

        </div>
        <div class="Br-NewsRv-cont">
          <%=@product['desc']%>
        </div>
      </div>

      <% end %>

    </div>

  </div>
</div>


