<div class="container-home">
  <div class="items">
    <div class="clear" />
    <div class="newest">
      <div class="headline-newest" style="color:#fff"><%= @category.name %> - <%= @catecount %></div>

      <% @posts.each do |product| %>

      <%#= Product.find_by_categoryid(params[:id]).size %>

      <div class="list-Browse-NewsRv">
        <div class="bl-image"><a href="/products/<%= product.id %>">
          <img src="<%= product.img %>" />
        </a>
      </div>
      <div class="price"><%= product.price %> Y
        <div class="newest-datetime"><%= product.date %>
          <% if !current_user.blank? && current_user.admin? %>
          | <%= link_to "delete", product, method: :delete,
          data: { confirm: "You sure delete product ?" } %>
          <% end %>
        </div>
      </div>
      <div class="title-Br-NewsRv"><a href="/products/<%= product.id %>"><%= product.title %></a>
      </div>
      <div class="Br-NewsRv-cont">
        <%= product.desc %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="clear"></div>
<%= will_paginate @posts %>
<div class="clear"></div>
</div>
