<div class="container-home">
  <div class="items">
    <div class="clear" />
    <div class="newest">
      <div class="headline-newest" style="color:#fff"><%= @category.name %></div>
      <% Product.find_all_by_categoryid(params[:id]).each do |product| %>

      <%#= Product.find_by_categoryid(params[:id]).size %>

      <div class="list-Browse-NewsRv">
        <div class="bl-image"><a href="/products/<%= product.id %>">
          <img src="<%= product.img %>" />
        </a>
      </div>
      <div class="price"><%= product.price %> Y
        <div class="newest-datetime"><%= product.date %></div>
      </div>
      <div class="title-Br-NewsRv"><a href="/products/<%= product.id %>"><%= product.title %></a>
      </div>
      <div class="Br-NewsRv-cont">
        <%= product.desc %>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>