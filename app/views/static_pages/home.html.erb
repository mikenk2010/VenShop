<div class="container-home">
  <!-- Menu here -->
  <div class="items">
    <div class="recommended">
      <div class="headline">Recommended Items</div>
      <% @condition = Product.find(:all, :conditions => ["created_at >?", DateTime.now], :limit =>4,:order => 'created_at DESC') %>
      <% @condition.each do |product| %>
      <div class="small-item">
        <div class="title"><a href="/products/<%= product.id %>" class="item-link"><%= product.title %></a></div>
        <div class="item-img"><a href="/products/<%= product.id %>"><img src="<%= product.img %>" /></a></div>
        <div class="item-price"><%= product.price %> Y</div>
      </div>
      <% end %>

    </div>
    <div class="clear" />
    <div class="newest">
      <div class="headline-newest">Newest Items</div>
      <% @condition = Product.find(:all, :conditions => ["created_at >?", DateTime.now], :limit =>4,:order => 'created_at DESC') %>
      <% @condition.each do |product| %>
      <div class="list-Browse-NewsRv">
        <div class="bl-image">
          <a href="/products/<%= product.id %>"><img src="<%= product.img %>" /></a>
        </div>
        <div class="price"><%= product.price %> Y
          <div class="newest-datetime"><%= product.date %> Y</div>
        </div>

        <div class="title-Br-NewsRv"><a href="products/<%= product.id %>"><%= product.title %></a>
        </div>
        <div class="Br-NewsRv-cont">
          <%= product.desc %>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</div>