<div class="container-home">
  <div class="items">
    <div class="clear" />
    <div class="newest">
      <p>Check Out - Clear All - Continue Shopping</p>


      <% if params[:id].nil? %>
      <div class="title-search">Your don't have any item in cart</div>
      <% else %>
      <div class="list-Browse-NewsRv">
        <div class="bl-image"><a href="/item"><img src="<%=@product['img']%>" /></a>
        </div>
        <div class="price"><%=@product['price']%>
          <div class="newest-datetime"><%=@product['date']%></div>
        </div>
        <div class="title-Br-NewsRv"><a href="/item">
          <%=@product['title']%>
        </a>
      </div>
      <div class="Br-NewsRv-cont">
        <%=@product['desc']%>
      </div>
    </div>
    <% end %>


  </div>
</div>
</div>

